/* Added by shrine to get scroll for table only if record count greater than 5 */
function assignTableScrollClass(elemId){	
	  $( "#"+elemId).addClass("scrollbox");
}
function constructScrollTable(elemId) {
	$( "#"+elemId).addClass("scrollbox");
	if($("#"+elemId+'.scrollbox tbody').height() > 170){
		$("#"+elemId+'.scrollbox tbody').height(170);
		
		$("#"+elemId+'.scrollbox tbody').enscroll({
			verticalTrackClass: 'track4',
			verticalHandleClass: 'handle4'
		});
		$("#"+elemId+'.scrollbox tbody').width('99.2%');
	} else {
		$("#"+elemId+'.scrollbox').width('98%');
	}
}

